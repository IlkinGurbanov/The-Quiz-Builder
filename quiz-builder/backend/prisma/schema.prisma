model Quiz {
  id        Int       @id @default(autoincrement())
  title     String
  createdAt DateTime  @default(now())
  questions Question[]
}

model Question {
  id        Int      @id @default(autoincrement())
  quizId    Int
  type      String?
  question  String?
  options   String?  // JSON string if multiple-choice
  answer    String?
  quiz      Quiz?   @relation(fields: [quizId], references: [id], onDelete: Cascade)
}
